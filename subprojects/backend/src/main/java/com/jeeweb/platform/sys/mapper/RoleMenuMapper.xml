<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jeeweb.platform.sys.mapper.RoleMenuMapper">
    <sql id="Insert_Clause">
        INSERT INTO t_sys_role_menu (
        f_role_id,
        f_menu_id
        )
        VALUES
    </sql>
    <sql id="Insert_Value_Clause">
        (
        #{f_role_id},
        #{f_menu_id}
        )
    </sql>
    <sql id="Insert_Values_Clause">
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.f_role_id},
            #{item.f_menu_id}
            )
        </foreach>
    </sql>

    <sql id="Select_Clause">
        SELECT
        t.f_role_id,
        t.f_menu_id,
        m.*
    </sql>
    <sql id="From_Clause">
        FROM t_sys_role_menu t
        LEFT JOIN t_sys_menu m ON m.f_id = t.f_menu_id
    </sql>
    <sql id="Where_Clause">
        WHERE 1=1
        <if test="f_role_id != null and f_role_id != ''">AND t.f_role_id = #{f_role_id}</if>
        <if test="f_menu_id != null and f_menu_id != ''">AND t.f_menu_id = #{f_menu_id}</if>
        <if test="f_menu_id != null and f_menu_id != ''">AND t.f_menu_id = #{f_menu_id}</if>
        <if test="f_is_show != null and f_is_show != ''">AND m.f_is_show = #{f_is_show}</if>
    </sql>


    <!-- select -->
    <select id="selectEntity" parameterType="java.lang.Integer" resultType="com.jeeweb.framework.core.model.RowMap">
        <include refid="Select_Clause" />
        <include refid="From_Clause" />
        WHERE t.f_id = #{f_id}
    </select>
    <select id="selectEntityListPage" parameterType="com.jeeweb.framework.core.model.ParameterMap" resultType="com.jeeweb.framework.core.model.RowMap">
        <include refid="Select_Clause" />
        <include refid="From_Clause" />
        <include refid="Where_Clause" />
    </select>
    <select id="selectMapEntityListPage" parameterType="com.jeeweb.framework.core.model.ParameterMap" resultType="com.jeeweb.framework.core.model.RowMap">
        <include refid="Select_Clause" />
        <include refid="From_Clause" />
        <include refid="Where_Clause" />
    </select>

    <!-- insert -->
    <insert id="insertEntity" parameterType="com.jeeweb.framework.core.model.RowMap">
        <selectKey resultType="java.lang.Integer" keyProperty="f_id" order="AFTER">
            SELECT @@IDENTITY
        </selectKey>
        <include refid="Insert_Clause" />
        <include refid="Insert_Value_Clause" />
    </insert>
    <insert id="insertEntities" parameterType="java.util.ArrayList">
        <include refid="Insert_Clause" />
        <include refid="Insert_Values_Clause" />
    </insert>

    <!-- update -->
    <update id="updateEntity" parameterType="com.jeeweb.framework.core.model.RowMap">
        UPDATE t_sys_role_menu SET
        <if test="f_role_id != null">f_role_id=#{f_role_id},</if>
        <if test="f_menu_id != null">f_menu_id=#{f_menu_id},</if>
        f_id=#{f_id}
        WHERE f_id=#{f_id}
    </update>

    <!-- delete -->
    <select id="isCanDeleteEntity" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        SELECT COUNT(f_menu_id) AS TOTAL_COUNT FROM (
        SELECT f_menu_id FROM t_sys_role_menu WHERE f_menu_id = #{f_id}
        UNION
        SELECT f_menu_id FROM t_sys_user_menu WHERE f_menu_id = #{f_id}
        ) TOTAL
    </select>
    <delete id="deleteEntity" parameterType="java.lang.Integer">
        DELETE FROM t_sys_role_menu WHERE f_id=#{f_id}
    </delete>
    <delete id="deleteEntities" parameterType="com.jeeweb.framework.core.model.ParameterMap">
        DELETE FROM t_sys_role_menu WHERE 1=1
        <if test="f_id_in != null and f_id_in != ''">AND f_id IN(${f_id_in})</if>
        <if test="f_role_id != null">AND f_role_id = #{f_role_id}</if>
        <if test="f_role_id_in != null and f_role_id_in != ''">AND f_role_id IN(${f_role_id_in})</if>
    </delete>

    <!-- 其他SQL -->
    <select id="selectRoleMenuListPage" parameterType="com.jeeweb.framework.core.model.ParameterMap" resultType="com.jeeweb.framework.core.model.RowMap">
        SELECT
        m.*,
        r.f_menu_id
        FROM t_sys_menu m
        LEFT JOIN (SELECT f_menu_id FROM t_sys_role_menu WHERE f_role_id = #{f_role_id}) r ON m.f_id = r.f_menu_id
        WHERE 1=1
        <if test="f_is_show != null and f_is_show != ''">AND m.f_is_show = #{f_is_show}</if>
        <if test="cur_user_id != null and cur_role_id_in == null">AND m.f_id IN(SELECT f_menu_id FROM t_sys_user_menu WHERE f_user_id=#{cur_user_id})</if>
        <if test="cur_user_id != null and cur_role_id_in != null">AND m.f_id IN(SELECT f_menu_id FROM t_sys_user_menu WHERE f_user_id=#{cur_user_id} UNION SELECT f_menu_id FROM t_sys_role_menu WHERE f_role_id IN(${cur_role_id_in}))</if>
    </select>
</mapper>