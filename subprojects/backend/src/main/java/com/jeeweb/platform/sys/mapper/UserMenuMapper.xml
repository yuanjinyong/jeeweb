<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jeeweb.platform.sys.mapper.UserMenuMapper">
    <sql id="Insert_Clause">
        INSERT INTO t_sys_user_menu(
        f_user_id,
        f_menu_id
        )
        VALUES
    </sql>
    <sql id="Insert_Value_Clause">
        (
        #{f_user_id},
        #{f_menu_id}
        )
    </sql>
    <sql id="Insert_Values_Clause">
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.f_user_id},
            #{item.f_menu_id}
            )
        </foreach>
    </sql>

    <sql id="Select_Clause">
        SELECT
        t.f_user_id,
        t.f_menu_id,
        m.*
    </sql>
    <sql id="From_Clause">
        FROM t_sys_user_menu t
        LEFT JOIN t_sys_menu m ON m.f_id = t.f_menu_id
    </sql>
    <sql id="Where_Clause">
        WHERE 1=1
        <if test="f_user_id != null">AND t.f_user_id = #{f_user_id}</if>
        <if test="f_menu_id != null">AND t.f_menu_id = #{f_menu_id}</if>
        <if test="f_menu_id_like != null">AND t.f_menu_id LIKE CONCAT('%', #{f_menu_id_like}, '%')</if>
        <if test="f_name_like != null">AND m.f_name LIKE CONCAT('%', #{f_name_like}, '%')</if>
    </sql>


    <!-- select -->
    <select id="selectEntity" parameterType="java.lang.Integer" resultType="com.jeeweb.framework.core.model.RowMap">
        <include refid="Select_Clause" />
        <include refid="From_Clause" />
        WHERE t.f_id = #{f_id}
    </select>
    <select id="selectEntityListPage" parameterType="com.jeeweb.framework.core.model.ParameterMap" resultType="com.jeeweb.framework.core.model.RowMap">
        <include refid="Select_Clause" />
        <include refid="From_Clause" />
        <include refid="Where_Clause" />
    </select>
    <select id="selectMapEntityListPage" parameterType="com.jeeweb.framework.core.model.ParameterMap" resultType="com.jeeweb.framework.core.model.RowMap">
        <include refid="Select_Clause" />
        <include refid="From_Clause" />
        <include refid="Where_Clause" />
    </select>

    <!-- insert -->
    <insert id="insertEntity" parameterType="com.jeeweb.framework.core.model.RowMap">
        <selectKey resultType="java.lang.Integer" keyProperty="f_id" order="AFTER">
            SELECT @@IDENTITY
        </selectKey>
        <include refid="Insert_Clause" />
        <include refid="Insert_Value_Clause" />
    </insert>
    <insert id="insertEntities" parameterType="java.util.ArrayList">
        <include refid="Insert_Clause" />
        <include refid="Insert_Values_Clause" />
    </insert>

    <!-- update -->
    <update id="updateEntity" parameterType="com.jeeweb.framework.core.model.RowMap">
        UPDATE t_sys_user_menu SET
        <if test="f_user_id != null">f_user_id=#{f_user_id},</if>
        <if test="f_menu_id != null">f_menu_id=#{f_menu_id},</if>
        f_id=#{f_id}
        WHERE f_id=#{f_id}
    </update>

    <!-- delete -->
    <select id="isCanDeleteEntity" parameterType="java.lang.Integer" resultType="java.lang.Integer">
        SELECT 0 FROM DUAL
    </select>
    <delete id="deleteEntity" parameterType="java.lang.Integer">
        DELETE FROM t_sys_user_menu WHERE f_id=#{f_id}
    </delete>
    <delete id="deleteEntities" parameterType="com.jeeweb.framework.core.model.ParameterMap">
        DELETE FROM t_sys_user_menu WHERE 1=1
        <if test="f_id_in != null and f_id_in != ''">AND f_id IN(${f_id_in})</if>
        <if test="f_user_id != null">AND f_user_id = #{f_user_id}</if>
        <if test="f_user_id_in != null">AND f_user_id IN(${f_user_id_in})</if>
    </delete>

    <!-- 其他SQL -->
    <!-- 查询用户（操作员）可赋&已赋的菜单（权限）列表 -->
    <select id="selectUserMenuListPage" parameterType="com.jeeweb.framework.core.model.ParameterMap" resultType="com.jeeweb.framework.core.model.RowMap">
        SELECT
        m.*,
        u.f_menu_id,
        u.f_user_id as id,
        u.f_user_id
        FROM t_sys_menu m
        LEFT JOIN (SELECT f_user_id, f_menu_id FROM t_sys_user_menu WHERE f_user_id = #{f_user_id}) u ON m.f_id = u.f_menu_id
        WHERE 1=1
        <if test="f_parent_path_like != null and f_parent_path_like != ''">AND m.f_parent_path LIKE CONCAT(#{f_parent_path_like}, '%')</if>
        <if test="f_status != null and f_status != ''">AND m.f_status = #{f_status}</if>
        <if test="cur_user_id != null and cur_role_id_in == null">AND m.f_id IN(SELECT f_menu_id FROM t_sys_user_menu WHERE f_user_id=#{cur_user_id})</if>
        <if test="cur_user_id != null and cur_role_id_in != null">AND m.f_id IN(SELECT f_menu_id FROM t_sys_user_menu WHERE f_user_id=#{cur_user_id} UNION SELECT f_menu_id FROM t_sys_role_menu WHERE f_role_id IN(${cur_role_id_in}))</if>
    </select>
    <!-- 查询用户（操作员）及其角色已赋的菜单（权限）列表 -->
    <select id="selectUserAndRoleMenuListPage" parameterType="com.jeeweb.framework.core.model.ParameterMap" resultType="com.jeeweb.platform.sys.entity.MenuEntity">
        SELECT
        m.*
        FROM
        t_sys_menu m
        <if test="f_user_id != null and f_user_id != ''">
        RIGHT JOIN (
        SELECT um.f_menu_id
        FROM t_sys_user_menu um
        WHERE um.f_user_id = #{f_user_id}
        UNION
        SELECT rm.f_menu_id
        FROM t_sys_role_menu rm
        LEFT JOIN t_sys_user_role ur ON ur.f_role_id = rm.f_role_id
        WHERE ur.f_user_id = #{f_user_id}
        ) t ON t.f_menu_id = m.f_id
        </if>
        WHERE 1=1
        <if test="f_status != null and f_status != ''">AND m.f_status = #{f_status}</if>
        <if test="f_type_in != null and f_type_in != ''">AND m.f_type IN(${f_type_in})</if>
    </select>
</mapper>